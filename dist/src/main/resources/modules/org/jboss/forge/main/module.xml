<module xmlns="urn:jboss:module:1.0" name="org.jboss.forge">

   <main-class name="org.jboss.forge.container.Bootstrap" />

   <resources>
      <!-- Insert resources here -->
   </resources>

   <dependencies>
      <module name="org.jboss.modules" />

      <module name="org.jboss.forge.parser.xml" services="import">
         <imports>
            <include path="**" />
            <include path="META-INF" />
         </imports>
      </module>

      <module name="org.jboss.forge.api" services="export" export="true">
         <imports>
            <include path="**" />
            <include path="META-INF" />
         </imports>
      </module>
      
      <module name="org.jboss.weld" services="import" />
      
      <module name="org.slf4j" services="import" />

      <module name="org.mvel" export="true" />

      <module name="sun.jdk" />
      <module name="sun.misc" />
      <module name="javax.api" />
   </dependencies>

</module>
